cd "$1" || exit 1
for u in `Xtract '*//div/small/a/@href' <(curl -s "http://www.last.fm/music/${1// /+}/+tracks" | sed -e  '/<!â€“\[if IE\]/d' | tidy -asxml 2>/dev/null | cat -v) | urldecode | urldecode`; do
	wget "$u" -O "${${u##*/}//+/ }"
done
